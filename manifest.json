{
    "manifest_version": 2,
    "name": "Saldo BIP",
    "description": "Saldo tarjeta de transporte de Chile BIP",
    "version": "2.0",
    "browser_action": {
        "default_icon": "icono.png",
        "default_popup": "popup.html",
        "default_title": "Saldo BIP"
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },
    "permissions": [
		"storage",
		"contextMenus"
	],
	"background": {
		"scripts": ["background.js"]
	}
}